<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    android:layout_marginHorizontal="4dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="4dp"
    app:strokeWidth="0dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground"
    app:cardBackgroundColor="@color/card_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- Header: Symbol and Current Value -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="12dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/text_symbol"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="AAPL"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary"
                    tools:text="AAPL" />

                <TextView
                    android:id="@+id/text_shares"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10 shares"
                    android:textSize="13sp"
                    android:textColor="@color/text_secondary"
                    android:layout_marginTop="2dp"
                    tools:text="10 shares" />
            </LinearLayout>

            <TextView
                android:id="@+id/text_current_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$1,824.50"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                tools:text="$1,824.50" />
        </LinearLayout>

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/divider"
            android:layout_marginVertical="12dp" />

        <!-- Details Grid -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!-- Left Column -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <!-- Average Cost -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Avg. Cost"
                    android:textSize="12sp"
                    android:textColor="@color/text_secondary" />

                <TextView
                    android:id="@+id/text_avg_cost"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$180.00"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary"
                    android:layout_marginTop="4dp"
                    tools:text="$180.00" />
            </LinearLayout>

            <!-- Right Column -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="end">

                <!-- Profit/Loss Label -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Profit/Loss"
                    android:textSize="12sp"
                    android:textColor="@color/text_secondary" />

                <!-- Profit/Loss Value -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="4dp">

                    <TextView
                        android:id="@+id/text_profit_loss"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="+$24.50"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:textColor="@color/positive_green"
                        android:layout_marginEnd="8dp"
                        tools:text="+$24.50" />

                    <TextView
                        android:id="@+id/text_profit_loss_percent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="(+1.36%)"
                        android:textSize="13sp"
                        android:textStyle="bold"
                        android:textColor="@color/positive_green"
                        tools:text="(+1.36%)" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
