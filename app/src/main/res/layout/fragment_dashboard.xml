<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp"
        android:paddingBottom="32dp">

        <!-- Welcome Header -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="à¸¢à¸´à¸™à¸”à¸µà¸•à¹‰à¸­à¸™à¸£à¸±à¸šà¸ªà¸¹à¹ˆ"
            android:textSize="16sp"
            android:textColor="@color/text_secondary"
            android:layout_marginTop="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="à¸—à¸±à¸™à¸«à¸¸à¹‰à¸™ Dashboard"
            android:textSize="32sp"
            android:textStyle="bold"
            android:textColor="@color/text_primary"
            android:letterSpacing="-0.02"
            android:layout_marginBottom="20dp" />

        <!-- Search Bar -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/search_bar"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginBottom="24dp"
            app:cardCornerRadius="28dp"
            app:cardElevation="2dp"
            app:strokeWidth="1dp"
            app:strokeColor="@color/border"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackground"
            app:cardBackgroundColor="@color/card_background">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingHorizontal="20dp">

                <TextView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:text="ðŸ”"
                    android:textSize="18sp"
                    android:gravity="center"
                    android:layout_marginEnd="12dp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Search stocks..."
                    android:textSize="16sp"
                    android:textColor="@color/text_hint" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Market Status Indicator -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="6dp"
            app:strokeWidth="0dp"
            app:cardBackgroundColor="@android:color/transparent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="@drawable/bg_card_gradient"
                android:orientation="vertical"
                android:padding="28dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="MARKET STATUS"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:letterSpacing="0.1"
                    android:textColor="#E0E0E0"
                    android:layout_marginBottom="8dp" />

                <!-- Market Status with Emoji -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:id="@+id/text_market_emoji"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸŸ¢"
                        android:textSize="24sp"
                        android:layout_marginEnd="12dp" />

                    <TextView
                        android:id="@+id/text_market_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="US Market Open"
                        android:textSize="28sp"
                        android:textStyle="bold"
                        android:letterSpacing="-0.01"
                        android:textColor="@android:color/white" />
                </LinearLayout>

                <!-- Market Session -->
                <TextView
                    android:id="@+id/text_market_session"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Market Hours"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:alpha="0.95"
                    android:textColor="@android:color/white"
                    android:layout_marginBottom="12dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Real-time stock prices powered by Finnhub"
                    android:textSize="13sp"
                    android:alpha="0.8"
                    android:textColor="@android:color/white" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Section: Trending Stocks -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Trending Stocks"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:letterSpacing="-0.01"
                    android:textColor="@color/text_primary" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Most active today"
                    android:textSize="13sp"
                    android:textColor="@color/text_secondary"
                    android:layout_marginTop="2dp" />
            </LinearLayout>

            <TextView
                android:id="@+id/text_view_all"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="View All"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/accentBlue"
                android:clickable="true"
                android:focusable="true" />
        </LinearLayout>

        <!-- Trending Stocks List -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_trending"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:nestedScrollingEnabled="false"
            tools:listitem="@layout/item_stock_dashboard" />

        <!-- Section: Popular Stocks -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Popular Stocks"
                android:textSize="22sp"
                android:textStyle="bold"
                android:letterSpacing="-0.01"
                android:textColor="@color/text_primary" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Top picks for investors"
                android:textSize="13sp"
                android:textColor="@color/text_secondary"
                android:layout_marginTop="2dp" />
        </LinearLayout>

        <!-- Popular Stocks Grid -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_popular"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:nestedScrollingEnabled="false"
            tools:listitem="@layout/item_stock_dashboard" />

    </LinearLayout>
</androidx.core.widget.NestedScrollView>
