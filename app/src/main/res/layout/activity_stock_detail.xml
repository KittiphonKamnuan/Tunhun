<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:gravity="center_vertical"
        android:background="@android:color/white"
        android:elevation="2dp">

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/btn_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@android:drawable/ic_menu_revert"
            android:contentDescription="Back"
            app:fabSize="mini"
            app:elevation="0dp"
            app:backgroundTint="@android:color/white"
            app:tint="@color/text_primary" />

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/btn_share"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="8dp"
            android:src="@android:drawable/ic_menu_share"
            app:tint="@color/text_primary"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:focusable="true"
            android:contentDescription="Share" />

    </LinearLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true"
        android:paddingBottom="16dp"
        android:clipToPadding="false">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/header_section"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/text_symbol_detail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="AAPL"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:id="@+id/text_price_detail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="182.45"
                    android:textSize="32sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:id="@+id/text_change_detail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="↓ 0.44%"
                    android:textSize="14sp"
                    android:textColor="@color/negative_red" />
            </LinearLayout>

            <FrameLayout
                android:id="@+id/chart_container"
                android:layout_width="match_parent"
                android:layout_height="400dp"
                android:background="@drawable/chart_gradient_background">

                <com.github.mikephil.charting.charts.LineChart
                    android:id="@+id/price_chart"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="16dp" />

                <ProgressBar
                    android:id="@+id/chart_loading"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_gravity="center"
                    android:visibility="gone"
                    android:indeterminateTint="#6200EE" />

                <TextView
                    android:id="@+id/chart_error_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Failed to load chart data"
                    android:textColor="@color/text_secondary"
                    android:textSize="14sp"
                    android:visibility="gone" />
            </FrameLayout>

            <HorizontalScrollView
                android:id="@+id/timeframe_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:paddingTop="16dp"
                android:paddingBottom="16dp"
                android:scrollbars="none"
                android:background="@android:color/white">

                <com.google.android.material.chip.ChipGroup
                    android:id="@+id/chip_group_timeframe"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:singleSelection="true"
                    app:selectionRequired="true"
                    app:chipSpacing="8dp">

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chip_1d"
                        android:layout_width="wrap_content"
                        android:layout_height="36dp"
                        android:text="D"
                        android:checked="true"
                        android:textSize="12sp"
                        android:textColor="@color/chip_text_selector"
                        app:chipBackgroundColor="@color/chip_background_selector"
                        app:chipStrokeColor="#E0E0E0"
                        app:chipStrokeWidth="1dp"
                        app:chipCornerRadius="18dp"
                        app:chipMinHeight="36dp"
                        style="@style/Widget.MaterialComponents.Chip.Choice" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chip_5d"
                        android:layout_width="wrap_content"
                        android:layout_height="36dp"
                        android:text="5D"
                        android:textSize="12sp"
                        android:textColor="@color/chip_text_selector"
                        app:chipBackgroundColor="@color/chip_background_selector"
                        app:chipStrokeColor="#E0E0E0"
                        app:chipStrokeWidth="1dp"
                        app:chipCornerRadius="18dp"
                        app:chipMinHeight="36dp"
                        style="@style/Widget.MaterialComponents.Chip.Choice" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chip_1m"
                        android:layout_width="wrap_content"
                        android:layout_height="36dp"
                        android:text="1M"
                        android:textSize="12sp"
                        android:textColor="@color/chip_text_selector"
                        app:chipBackgroundColor="@color/chip_background_selector"
                        app:chipStrokeColor="#E0E0E0"
                        app:chipStrokeWidth="1dp"
                        app:chipCornerRadius="18dp"
                        app:chipMinHeight="36dp"
                        style="@style/Widget.MaterialComponents.Chip.Choice" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chip_6m"
                        android:layout_width="wrap_content"
                        android:layout_height="36dp"
                        android:text="6M"
                        android:textSize="12sp"
                        android:textColor="@color/chip_text_selector"
                        app:chipBackgroundColor="@color/chip_background_selector"
                        app:chipStrokeColor="#E0E0E0"
                        app:chipStrokeWidth="1dp"
                        app:chipCornerRadius="18dp"
                        app:chipMinHeight="36dp"
                        style="@style/Widget.MaterialComponents.Chip.Choice" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chip_ytd"
                        android:layout_width="wrap_content"
                        android:layout_height="36dp"
                        android:text="YTD"
                        android:textSize="12sp"
                        android:textColor="@color/chip_text_selector"
                        app:chipBackgroundColor="@color/chip_background_selector"
                        app:chipStrokeColor="#E0E0E0"
                        app:chipStrokeWidth="1dp"
                        app:chipCornerRadius="18dp"
                        app:chipMinHeight="36dp"
                        style="@style/Widget.MaterialComponents.Chip.Choice" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chip_1y"
                        android:layout_width="wrap_content"
                        android:layout_height="36dp"
                        android:text="1Y"
                        android:textSize="12sp"
                        android:textColor="@color/chip_text_selector"
                        app:chipBackgroundColor="@color/chip_background_selector"
                        app:chipStrokeColor="#E0E0E0"
                        app:chipStrokeWidth="1dp"
                        app:chipCornerRadius="18dp"
                        app:chipMinHeight="36dp"
                        style="@style/Widget.MaterialComponents.Chip.Choice" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chip_5y"
                        android:layout_width="wrap_content"
                        android:layout_height="36dp"
                        android:text="5Y"
                        android:textSize="12sp"
                        android:textColor="@color/chip_text_selector"
                        app:chipBackgroundColor="@color/chip_background_selector"
                        app:chipStrokeColor="#E0E0E0"
                        app:chipStrokeWidth="1dp"
                        app:chipCornerRadius="18dp"
                        app:chipMinHeight="36dp"
                        style="@style/Widget.MaterialComponents.Chip.Choice" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chip_max"
                        android:layout_width="wrap_content"
                        android:layout_height="36dp"
                        android:text="MAX"
                        android:textSize="12sp"
                        android:textColor="@color/chip_text_selector"
                        app:chipBackgroundColor="@color/chip_background_selector"
                        app:chipStrokeColor="#E0E0E0"
                        app:chipStrokeWidth="1dp"
                        app:chipCornerRadius="18dp"
                        app:chipMinHeight="36dp"
                        style="@style/Widget.MaterialComponents.Chip.Choice" />

                </com.google.android.material.chip.ChipGroup>
            </HorizontalScrollView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:background="@android:color/white">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Stock Information"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary"
                    android:layout_marginBottom="16dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:divider="@android:drawable/divider_horizontal_bright"
                    android:showDividers="middle">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingTop="12dp"
                        android:paddingBottom="12dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Open"
                            android:textSize="14sp"
                            android:textColor="@color/text_secondary" />

                        <TextView
                            android:id="@+id/text_open_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="--"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="@color/text_primary" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingTop="12dp"
                        android:paddingBottom="12dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="High"
                            android:textSize="14sp"
                            android:textColor="@color/text_secondary" />

                        <TextView
                            android:id="@+id/text_high_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="--"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="@color/text_primary" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingTop="12dp"
                        android:paddingBottom="12dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Low"
                            android:textSize="14sp"
                            android:textColor="@color/text_secondary" />

                        <TextView
                            android:id="@+id/text_low_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="--"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="@color/text_primary" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingTop="12dp"
                        android:paddingBottom="12dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Previous Close"
                            android:textSize="14sp"
                            android:textColor="@color/text_secondary" />

                        <TextView
                            android:id="@+id/text_prev_close"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="--"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="@color/text_primary" />
                    </LinearLayout>
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="✓ Real-time price from Finnhub Quote API"
                    android:textSize="12sp"
                    android:textColor="@color/text_secondary" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="✓ Chart data: Simulated trend based on current price"
                    android:textSize="12sp"
                    android:textColor="@color/text_secondary" />
            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:background="@android:color/white"
        android:elevation="8dp">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_buy"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            android:text="ซื้อ"
            android:textSize="16sp"
            android:textStyle="bold"
            app:backgroundTint="@color/dimePurple"
            app:cornerRadius="12dp"
            android:textColor="@android:color/white" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_add_watchlist"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:text="เพิ่ม Watchlist"
            android:textSize="16sp"
            android:textStyle="bold"
            app:backgroundTint="@color/surface"
            app:cornerRadius="12dp"
            android:textColor="@color/dimePurple"
            app:strokeColor="@color/dimePurple"
            app:strokeWidth="2dp" />
    </LinearLayout>

</LinearLayout>