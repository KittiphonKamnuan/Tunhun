<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <!-- Scrollable Content -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Header Section -->
            <LinearLayout
                android:id="@+id/header_section"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:paddingTop="48dp">

                <!-- Stock Symbol -->
                <TextView
                    android:id="@+id/text_symbol_detail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="AAPL"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary"
                    android:layout_marginBottom="4dp" />

                <!-- Current Price -->
                <TextView
                    android:id="@+id/text_price_detail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="182.45"
                    android:textSize="32sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary"
                    android:layout_marginBottom="4dp" />

                <!-- Change Percent -->
                <TextView
                    android:id="@+id/text_change_detail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="↓ 0.44%"
                    android:textSize="14sp"
                    android:textColor="@color/negative_red" />
            </LinearLayout>

            <!-- Chart Container -->
            <FrameLayout
                android:id="@+id/chart_container"
                android:layout_width="match_parent"
                android:layout_height="400dp"
                android:background="@drawable/chart_gradient_background">

                <!-- Chart -->
                <com.github.mikephil.charting.charts.LineChart
                    android:id="@+id/price_chart"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="16dp" />

                <!-- Loading Indicator -->
                <ProgressBar
                    android:id="@+id/chart_loading"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_gravity="center"
                    android:visibility="gone"
                    android:indeterminateTint="#6200EE" />

                <!-- Error Message -->
                <TextView
                    android:id="@+id/chart_error_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Failed to load chart data"
                    android:textColor="@color/text_secondary"
                    android:textSize="14sp"
                    android:visibility="gone" />
            </FrameLayout>

            <!-- Time Period Selector -->
            <HorizontalScrollView
                android:id="@+id/timeframe_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:paddingTop="16dp"
                android:paddingBottom="16dp"
                android:scrollbars="none"
                android:background="@android:color/white">

                <com.google.android.material.chip.ChipGroup
                    android:id="@+id/chip_group_timeframe"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:singleSelection="true"
                    app:selectionRequired="true"
                    app:chipSpacing="8dp">

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chip_1d"
                        android:layout_width="wrap_content"
                        android:layout_height="36dp"
                        android:text="D"
                        android:textSize="12sp"
                        android:textColor="@color/chip_text_selector"
                        app:chipBackgroundColor="@color/chip_background_selector"
                        app:chipStrokeColor="#E0E0E0"
                        app:chipStrokeWidth="1dp"
                        app:chipCornerRadius="18dp"
                        app:chipMinHeight="36dp"
                        style="@style/Widget.MaterialComponents.Chip.Choice" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chip_5d"
                        android:layout_width="wrap_content"
                        android:layout_height="36dp"
                        android:text="5D"
                        android:textSize="12sp"
                        android:textColor="@color/chip_text_selector"
                        app:chipBackgroundColor="@color/chip_background_selector"
                        app:chipStrokeColor="#E0E0E0"
                        app:chipStrokeWidth="1dp"
                        app:chipCornerRadius="18dp"
                        app:chipMinHeight="36dp"
                        style="@style/Widget.MaterialComponents.Chip.Choice" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chip_1m"
                        android:layout_width="wrap_content"
                        android:layout_height="36dp"
                        android:text="1M"
                        android:checked="true"
                        android:textSize="12sp"
                        android:textColor="@color/chip_text_selector"
                        app:chipBackgroundColor="@color/chip_background_selector"
                        app:chipStrokeColor="#E0E0E0"
                        app:chipStrokeWidth="1dp"
                        app:chipCornerRadius="18dp"
                        app:chipMinHeight="36dp"
                        style="@style/Widget.MaterialComponents.Chip.Choice" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chip_6m"
                        android:layout_width="wrap_content"
                        android:layout_height="36dp"
                        android:text="6M"
                        android:textSize="12sp"
                        android:textColor="@color/chip_text_selector"
                        app:chipBackgroundColor="@color/chip_background_selector"
                        app:chipStrokeColor="#E0E0E0"
                        app:chipStrokeWidth="1dp"
                        app:chipCornerRadius="18dp"
                        app:chipMinHeight="36dp"
                        style="@style/Widget.MaterialComponents.Chip.Choice" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chip_ytd"
                        android:layout_width="wrap_content"
                        android:layout_height="36dp"
                        android:text="YTD"
                        android:textSize="12sp"
                        android:textColor="@color/chip_text_selector"
                        app:chipBackgroundColor="@color/chip_background_selector"
                        app:chipStrokeColor="#E0E0E0"
                        app:chipStrokeWidth="1dp"
                        app:chipCornerRadius="18dp"
                        app:chipMinHeight="36dp"
                        style="@style/Widget.MaterialComponents.Chip.Choice" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chip_1y"
                        android:layout_width="wrap_content"
                        android:layout_height="36dp"
                        android:text="1Y"
                        android:textSize="12sp"
                        android:textColor="@color/chip_text_selector"
                        app:chipBackgroundColor="@color/chip_background_selector"
                        app:chipStrokeColor="#E0E0E0"
                        app:chipStrokeWidth="1dp"
                        app:chipCornerRadius="18dp"
                        app:chipMinHeight="36dp"
                        style="@style/Widget.MaterialComponents.Chip.Choice" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chip_5y"
                        android:layout_width="wrap_content"
                        android:layout_height="36dp"
                        android:text="5Y"
                        android:textSize="12sp"
                        android:textColor="@color/chip_text_selector"
                        app:chipBackgroundColor="@color/chip_background_selector"
                        app:chipStrokeColor="#E0E0E0"
                        app:chipStrokeWidth="1dp"
                        app:chipCornerRadius="18dp"
                        app:chipMinHeight="36dp"
                        style="@style/Widget.MaterialComponents.Chip.Choice" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chip_max"
                        android:layout_width="wrap_content"
                        android:layout_height="36dp"
                        android:text="MAX"
                        android:textSize="12sp"
                        android:textColor="@color/chip_text_selector"
                        app:chipBackgroundColor="@color/chip_background_selector"
                        app:chipStrokeColor="#E0E0E0"
                        app:chipStrokeWidth="1dp"
                        app:chipCornerRadius="18dp"
                        app:chipMinHeight="36dp"
                        style="@style/Widget.MaterialComponents.Chip.Choice" />
                </com.google.android.material.chip.ChipGroup>
            </HorizontalScrollView>

            <!-- Stock Information Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:background="@android:color/white">

                <!-- Section Title -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Stock Information"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary"
                    android:layout_marginBottom="16dp" />

                <!-- Info Grid -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:divider="@android:drawable/divider_horizontal_bright"
                    android:showDividers="middle">

                    <!-- Open Price -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingTop="12dp"
                        android:paddingBottom="12dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Open"
                            android:textSize="14sp"
                            android:textColor="@color/text_secondary" />

                        <TextView
                            android:id="@+id/text_open_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="--"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="@color/text_primary" />
                    </LinearLayout>

                    <!-- High Price -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingTop="12dp"
                        android:paddingBottom="12dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="High"
                            android:textSize="14sp"
                            android:textColor="@color/text_secondary" />

                        <TextView
                            android:id="@+id/text_high_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="--"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="@color/text_primary" />
                    </LinearLayout>

                    <!-- Low Price -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingTop="12dp"
                        android:paddingBottom="12dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Low"
                            android:textSize="14sp"
                            android:textColor="@color/text_secondary" />

                        <TextView
                            android:id="@+id/text_low_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="--"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="@color/text_primary" />
                    </LinearLayout>

                    <!-- Previous Close -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingTop="12dp"
                        android:paddingBottom="12dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Previous Close"
                            android:textSize="14sp"
                            android:textColor="@color/text_secondary" />

                        <TextView
                            android:id="@+id/text_prev_close"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="--"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="@color/text_primary" />
                    </LinearLayout>
                </LinearLayout>

                <!-- Data Source Info -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="✓ Real-time price from Finnhub Quote API"
                    android:textSize="12sp"
                    android:textColor="@color/text_secondary" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="✓ Chart data: Simulated trend based on current price"
                    android:textSize="12sp"
                    android:textColor="@color/text_secondary" />
            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <!-- Back Button -->
    <ImageButton
        android:id="@+id/btn_back"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_margin="8dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:src="@android:drawable/ic_menu_close_clear_cancel"
        android:tint="@color/text_primary"
        android:contentDescription="Back" />

</FrameLayout>
